<?xml version="1.0" encoding="ISO-8859-1"?>
<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform" 
xmlns="http://www.w3.org/1999/xhtml"
xmlns:maria="http://userpages.umbc.edu/~mariaps1">

<xsl:template match="/">
  <html>
  <body>
  <h2>Resume</h2>
  <table border="1">
    <tr bgcolor="#9acd32">
      <td>Personal Details</td></tr>
    <tr><td>
      <b>Name: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:Name"/><br/>
	    <b>Address Line1: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:Address/maria:Line1"/><br/>
      <b>Address Line2: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:Address/maria:Line2"/><br/>
      <b>Address City: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:Address/maria:city"/><br/>
      <b>Address Country: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:Address/maria:country"/><br/>
      <b>Address ZIP: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:Address/maria:zip"/><br/>
			<b>Phone Number: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:PhoneNumber/@Phone"/><br/>
			<b>Email: </b><xsl:value-of select="maria:HW2/maria:Resume/maria:personal_details/maria:Email/@Primary"/></td>
    </tr>
  </table>
  <table border="1">
  <tr bgcolor="#9acd32">
  <td colspan="3">Education Qualification</td></tr>
  <tr>
		<th>Degree</th>
		<th>GPA</th>
		<th>Year</th></tr>
	 <xsl:for-each select="maria:HW2/maria:Resume/maria:Education/maria:Qualification">
   <tr>
      <td><xsl:value-of select="maria:Degree"/></td>
      <td><xsl:value-of select="maria:GPA"/></td>
	  <td><xsl:value-of select="maria:Year"/></td>
    </tr>
    </xsl:for-each>
    </table>
      <table border="1">
  <tr bgcolor="#9acd32">
  <td colspan="4">Experience</td></tr>
  <tr>
		<th>Organisation</th>
		<th>Duration</th>
		<th>Role</th>
    <th>Project</th></tr>
	 <xsl:for-each select="maria:HW2/maria:Resume/maria:Experience/maria:Job">
   <tr>
      <td><xsl:value-of select="maria:Organisation"/></td>
      <td><xsl:value-of select="maria:Duration"/></td>
	  <td><xsl:value-of select="maria:Role"/></td>
    <td><xsl:value-of select="maria:Project"/></td>
    </tr>
    </xsl:for-each>
    </table>
  <table border="1">
  <tr bgcolor="#9acd32">
  <td colspan="2">Educational Achievement</td></tr>
  <tr>
		<th>Title</th>
		<th>Date</th></tr>
	 <xsl:for-each select="maria:HW2/maria:Resume/maria:EducationalAchievement/maria:Achievement">
   <tr>
      <td><xsl:value-of select="maria:Title"/></td>
      <td><xsl:value-of select="maria:Date"/></td>
    </tr>
    </xsl:for-each>
    </table>
  </body>
  </html>
</xsl:template>

</xsl:stylesheet>
